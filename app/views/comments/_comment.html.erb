<div class="container">
  <div class="row">
    <div class="col-xl-12 my-5">
      <div class="card text-center">
        <div class="card-header">
          <h2>口コミ</h2>
        </div>
        <div class="card-body text-center mt-4">
          <%= form_for [@store, @comment] do |f| %>
            <div>
            <%= f.label "タイトル" %>
            <%= f.text_field :comment_title %>
            </div>
            <div class="mt-4">
            <%= f.label "内容" %>
            <%= f.text_area :comment_content %>
            </div>
            <br>
            <%= f.submit 'コメントする' %>
          <% end %>
        </div>
        <div class="card-header">
          コメント数<%= @comments.length %>件
        </div>
        <div>
        <% if @comments %>
          <div class="text-center">
            <h2>コメント一覧</h2>
            <div>
              <% @comments.each do |c| %>
                <div class="comment">
                  <div class="bg-white col-sm-1 col-xs-0"></div>
                  <div class="comment-content bg-light col-sm-10 col-xs-12">
                    <div>
                      <h5><%= c.comment_title %></h5>
                    </div>
                    <div>
                      <%= c.comment_content %>
                    </div>
                    <div class="comment-name">
                      <%= c.user.name %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>