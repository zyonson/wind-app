<div id="favorite_<%= @store.id %>">
  <% if !Favorite.exists?(user: current_user, store_id: @store.id)%>
    <%= button_to store_favorites_path(@store)do %>
    <i class="fa-regular fa-star"></i><span>お気に入り登録</span>
    <% end %>
  <% else %> 
    <%= button_to store_favorites_path(@store), method: :delete do %>
      <i class="fa-solid fa-star"></i><span>お気に入り取り消し</span>
    <% end %>
  <% end %>
</div>
