<%= form_with model: @user do |f| %>
  <%= render partial: 'users/shared/error_form', locals: { user: @user } %>
  <div class="form-group row">
    <%= f.label :name, '名前', class: "col-sm-2" %>
    <%= f.text_field :name, class: 'form-control, col-sm-10' %>
  </div>
  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class: "col-sm-2" %>
    <%= f.text_field :email ,class: 'form-control, col-sm-10' %>
  </div>
  <div class="form-group row">
    <%= f.label :password, 'パスワード', class: "col-sm-2" %>
    <%= f.text_field :password ,class: 'form-control, col-sm-10' %>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation, 'パスワード確認', class: "col-sm-2" %>
    <%= f.text_field :password_confirmation ,class: 'form-control, col-sm-10' %>
  </div>
  <%= f.submit "更新", class: 'btn btn-primary btn-lg d-grid gap-2 col-12' %>
<% end %>
