<main>
  <div class="card" >
    <div class="row g-0">
      <div class="col-md-2"></div>
      <div class="col-md-5">
        <%= image_tag @store.image, class: "mainimage"  %>
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <h5 class="card-title">店舗名: <%= @store.name %></h5>
          <p class="card-text">住所: <%= @store.address %></p>
          <p class="card-text">紹介: <%= @store.description %></p>
          <p class="card-text">電話番号: <%= @store.phone %></p>
          <p class="card-text">予約方法: <%= @store.reserve_way %></p>
          <p class="card-text">営業時間: <%= @store.open %></p>
          <p class="card-text">定休日: <%= @store.holiday %></p>
          <p class="card-text">料金: <%= @store.price %></p>
          <p class="card-text">最寄駅: <%= @store.near_station %></p>
          <p class="card-text">艇庫: <%= @store.space_of_surf %></p>
          <p><%= link_to "#{@store.name}の予約はこちらから！", @store.store_url %></p>
        </div>
        <%= render 'favorites/favorite' %>
      </div>
    </div>
    <%= render 'comments/comment' %>
    <%= link_to '戻る', :back %>
  </div>
</main>
